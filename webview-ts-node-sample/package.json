{
	"name": "webview-ts-mode-sample",
	"displayName": "Webview typescript and node sample",
	"description": "Sample showing how to implement webview logic using typescript and using npm pakcages",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:semverCalculator.start",
		"onWebviewPanel:semverCalculator"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/vscode-extension-samples.git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "semverCalculator.start",
				"title": "Start Webview semver calculator session",
				"category": "Webview semver calculator"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"prepare": "cd webview && npm install && cd ..",
		"compile:webview": "cd webview && npm run compile && cd ..",
		"compile": "tsc -p ./ && npm run compile:webview",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.41.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2",
		"nyc": "^15.0.0"
	}
}
